<!DOCTYPE html>
<html>
  <head>
    <title>GamificationFaurecia</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>


  	<!--  Barra de navegacion de los usuarios  -->    
    <% if user_signed_in? %>  
          <%= render "partials/navUser" %>
        <main class="mdl-layout__content">
          <div class="page-content">  <%= yield %> </div>
        </main>

    <% end %> 


    <!--  Barra de navegacion de los administradores  -->    
    <% if admin_signed_in? %>  
          <%= render "partials/navAdmin" %>
        <main class="mdl-layout__content">
          <div class="page-content">  <%= yield %> </div>
        </main>

    <% end %> 



    <% if !current_user and !current_admin %>

      <%= yield %>

    <% end %>


  </body>
</html>
